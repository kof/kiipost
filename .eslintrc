{
    "env": {
        "browser": true,
        "amd": true,
        "node": true
    },
    "globals": {
        "DocumentFragment": true,
        "Promise": true
    },
    "rules": {
        "valid-jsdoc": 0,
        "curly": [0, "multi"],
        "brace-style": [2],
        "consistent-this": 2,
        "no-constant-condition": 2,
        "no-underscore-dangle": 0,
        "no-use-before-define": 0,
        "no-alert": 0,
        "func-names": 0,
        "func-style": [2, "declaration"],
        "new-cap": 2,
        "new-parens": 2,
        "no-ternary": 0,
        "no-unused-vars": [2, {"vars": "local", "args": "none"}],
        "quotes": [2, "single"],
        "one-var": 0,
        "space-infix-ops": 0,
        "semi": [2, "never"],
        "eqeqeq": [0],
        "no-extra-strict": [2],
        "strict": [2],
        "no-undef": [0]
    }
}
